                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Created Classes"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
                <!--app:layout_constraintStart_toStartOf="@+id/txtRecommend"
                app:layout_constraintTop_toBottomOf="@id/horizontal1"/>-->

            <HorizontalScrollView
                android:id="@+id/horizontal2"
                android:layout_width="415dp"
                android:layout_height="310dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtCreateClass"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/create1"
                        android:layout_width="270dp"
                        android:layout_height="270dp"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="@color/lavender"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        tools:ignore="MissingConstraints">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="150dp"
                                android:layout_marginTop="95dp"
                                android:src="@drawable/ic_baseline_person_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="-150dp"
                                android:text="Class 1"
                                android:textColor="@color/black"
                                android:textSize="19dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/create2"
                        android:layout_width="270dp"
                        android:layout_height="270dp"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="@color/lavender"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        tools:ignore="MissingConstraints">

