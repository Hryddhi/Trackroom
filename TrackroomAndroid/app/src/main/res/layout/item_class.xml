<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_Class_Card"
    android:layout_width="350dp"
    android:layout_height="220dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lavender"
        android:id="@+id/class_card"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_class_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="@id/item_class_pic"
            app:layout_constraintEnd_toEndOf="@id/item_class_pic"
            app:layout_constraintTop_toTopOf="@id/item_class_pic"
            app:layout_constraintBottom_toBottomOf="@id/item_class_pic"
            android:alpha="0.1"
            android:src="@drawable/activity_launcher_banner" />

        <TextView
            android:id="@+id/item_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="Class 1"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/item_class_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_class_pic" />

        <TextView
            android:id="@+id/item_course_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/item_class_name"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            android:text="Rating : "
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/item_course_rating"
            app:layout_constraintTop_toBottomOf="@id/item_class_name"
            android:text="4.5"
            android:drawableRight="@drawable/ic_baseline_star_outline_24"
            android:drawablePadding="5dp"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_course_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Course Category : "
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/item_course_rating"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/item_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/item_course_category"
            app:layout_constraintTop_toBottomOf="@id/item_course_rating"
            android:text="Cooking"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_class_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a sample class"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/item_course_category"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/item_course_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/item_class_description"
            app:layout_constraintStart_toStartOf="@id/item_class_name"
            android:text="Instructor "
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/item_tv_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/item_course_creator"
            app:layout_constraintTop_toBottomOf="@id/item_class_description"
            android:fontFamily="sans-serif-black"
            android:text="Name"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>